<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MenuActivities.Fill_FIR_Activity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_marginStart="120dp"
        android:src="@drawable/delhipolicelogo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="1dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#51E4E1E9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIR"
                    android:layout_marginStart="155dp"
                    android:textColor="#5B5863"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <TextView
                    android:textSize="15dp"
                    android:layout_marginStart="25dp"
                    android:text="( Under Section 154 of the Criminal Procedure Code )"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:id="@+id/fir_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Name"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/fir_FatherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Father Name "
                    android:inputType="text" />

                <EditText
                    android:id="@+id/fir_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Address"
                    android:inputType="text"/>
                <EditText
                    android:id="@+id/fir_PhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Phone Number"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/fir_PlaceOccurence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Place of Occurrence"
                    android:inputType="text"/>
                <EditText
                    android:id="@+id/fir_DateandTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Date and Hour of Occurrence"
                    android:inputType="text"/>
                <EditText
                    android:id="@+id/fir_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Description of the accused"
                    android:inputType="text"/>
                <EditText
                    android:id="@+id/fir_DetailWitness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Details of witness (if any)"
                    android:inputType="text"/>
                <Button
                    android:id="@+id/victim_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="#020F11"
                    android:text="REPORT "
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
